<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/blutooth" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/tt" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView10"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@+id/relativeLayout"
        android:text="CO浓度:"
        android:textColor="#B22222"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/T5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:text=""
        android:textColor="#B22222"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@+id/relativeLayout"
        android:text="CH2O浓度:"
        android:textColor="#B22222"
        android:textSize="15dp"
        android:id="@+id/textView10" />

    <TextView
        android:id="@+id/T6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:text=""
        android:textColor="#B22222"
        android:textSize="15dp" />

    <Button
        android:id="@+id/send_btn"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_alignStart="@+id/send_btn0"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="23dp"
        android:layout_weight="3"
        android:background="@drawable/on"
        android:text="ON"
        android:textColor="#DC143C"
        android:textSize="30sp" />

    <Button
        android:id="@+id/send_btn0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/imageViewx"
        android:layout_below="@+id/send_btn"
        android:layout_marginTop="17dp"
        android:layout_weight="3"
        android:background="@drawable/key"
        android:text="ON"
        android:textColor="#8FBC8F"
        android:textSize="30sp" />


    <Button
        android:id="@+id/send_btn1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/send_et1"
        android:layout_alignTop="@+id/send_btn"
        android:layout_weight="3"
        android:background="@drawable/key"
        android:text="ON"
        android:textColor="#8FBC8F"
        android:textSize="30sp" />

    <Button
        android:id="@+id/send_btn2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/send_btn1"
        android:layout_alignTop="@+id/send_btn0"
        android:layout_marginTop="15dp"
        android:layout_weight="3"
        android:background="@drawable/key"
        android:text="ON"
        android:textColor="#8FBC8F"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageViewx"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignTop="@+id/send_et"
        android:layout_toStartOf="@+id/send_btn11"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/tt1" />


    <ImageView
        android:id="@+id/imageViewy"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignTop="@+id/send_et"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/send_btn11"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/tt3" />

    <TextView
        android:id="@+id/connect_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_btn0"
        android:layout_centerHorizontal="true"
        android:text="diconnected"
        android:textColor="#CD2626"
        android:textSize="35dp" />

    <Button
        android:id="@+id/send_btn11"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/connect_state"
        android:layout_marginBottom="13dp"
        android:layout_weight="3"
        android:background="#96CDCD"
        android:text="设定"
        android:textColor="#CD2626"
        android:textSize="15sp" />

    <Button
        android:id="@+id/send_btn12"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageViewy"
        android:layout_alignParentEnd="true"
        android:layout_weight="3"
        android:background="#96CDCD"
        android:text="设定"
        android:textColor="#CD2626"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/send_et"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_above="@+id/send_btn11"
        android:layout_toStartOf="@+id/imageViewy"
        android:background="#40E0D0"
        android:hint="   CO阈值" />

    <EditText
        android:id="@+id/send_et1"
        android:layout_width="90dp"
        android:layout_height="40dp"

        android:layout_above="@+id/send_btn12"
        android:layout_alignParentEnd="true"
        android:background="#40E0D0"
        android:hint=" CH2O阈值" />

    <TextView
        android:id="@+id/ppm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ppm"
        android:textColor="#B22222"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/T6"
        android:layout_alignBottom="@+id/T6"
        android:layout_toEndOf="@+id/connect_state" />

    <TextView
        android:id="@+id/ppm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ppm"
        android:textColor="#B22222"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/T5"
        android:layout_alignBottom="@+id/T5"
        android:layout_toStartOf="@+id/send_et1" />

</RelativeLayout>
